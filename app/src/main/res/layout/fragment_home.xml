<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/home_profile"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10dp"
            android:src="@drawable/ic_launcher_background"/>
        <ImageView
            android:id="@+id/home_notifications"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_gravity="right"
            android:layout_marginEnd="60dp"
            android:src="@drawable/round_notifications_none_24"
            android:tint="@color/teal_light"/>

    </Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="@dimen/_10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_place_image"
            android:tint="@color/teal_dark"
            android:tintMode="screen"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/_10dp"
            android:paddingStart="@dimen/_40dp"
            android:text="Upcoming Trip"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40dp"
            android:paddingStart="@dimen/_40dp"
            android:text="Name of Trip"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_30dp"/>

    </FrameLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="edu.sjsu.android.vacationplanner.group.ItineraryFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>